{% extends 'email/base_email.html.twig' %}

{% block subject %}Welcome! Please verify your email{% endblock %}

{% block content %}
    <p>Hello <strong>{{ user.email|e }}</strong>,</p>

    <p>Welcome to our application! Please click the button below to verify your email address:</p>

    <p style="text-align: center;">
        <a href="{{ validate_link }}" target="_blank" style="
            display: inline-block;
            padding: 12px 20px;
            background-color: #0069d9;
            color: #ffffff;
            text-decoration: none;
            font-weight: bold;
            border-radius: 5px;">
            Validate your email
        </a>
    </p>

    <p>This link will expire on <strong>{{ token_expiration|date('d-m-Y H:i') }}</strong>.</p>

    <p>If you did not request this registration, you can safely ignore this email.</p>

    <p>Best regards,<br>The Team</p>
{% endblock %}
